{
  "name": "ramodel",
  "version": "0.0.4",
  "description": "Framework for creating reactive models",
  "keywords": [
    "reactive",
    "hooks",
    "model"
  ],
  "main": "dist/core/mod.js",
  "types": "dist/core/mod.d.ts",
  "author": "Vladislav Orlov <me@orlov-vo.ru>",
  "homepage": "https://github.com/orlov-vo/ramodel#readme",
  "repository": "github:orlov-vo/ramodel",
  "bugs": {
    "url": "https://github.com/orlov-vo/ramodel/issues",
    "email": "me@orlov-vo.ru"
  },
  "license": "MIT",
  "files": [
    "dist/**/*",
    "hooks/**/*"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "build": "yarn clean && tsc",
    "test": "jest",
    "lint": "eslint src --ext .ts,.tsx",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepare": "yarn build",
    "prepublishOnly": "yarn test && yarn lint",
    "preversion": "yarn test && yarn lint",
    "version": "yarn format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "husky": {
    "hooks": {}
  },
  "devDependencies": {
    "@types/jest": "^25.2.1",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "@typescript-eslint/parser": "^2.30.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-typescript": "^7.2.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^4.2.5",
    "jest": "^25.4.0",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "ts-jest": "^25.4.0",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "idx": "^2.5.6",
    "memoize-one": "^5.1.1",
    "nanoid": "^3.1.3"
  }
}
